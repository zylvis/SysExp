@model IEnumerable<SysExp.Models.Description>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.TextArea1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextArea2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextArea3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextArea4)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TextArea1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextArea2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextArea3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextArea4)
            </td>

            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
