@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Count() > 0)
{
    <table class="table table-dark" style="background-color: #212738">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td class="text-right">
                        <a asp-area ="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area ="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No user exists ...</p>
}
