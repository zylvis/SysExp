}
else
{
    <br />
    <br />
    <div id="itopmargin" class="container-fluid">

        <div class="row  align-items-center">
            <div id="carouselExampleSlidesOnly" class="carousel slide col-6" data-ride="carousel" data-interval="3000">
                <div class="carousel-inner text-center" style="color: #363636; font-size: 26px">
                    <div class="carousel-item active">
                        Trend folowing and breakout logic.
                    </div>
                    <div class="carousel-item">
                        Long research.
                    </div>
                    <div class="carousel-item">
                        Transparent results.
                    </div>
                    <div class="carousel-item">
                        Scalable.
                    </div>
                </div>
            </div>
            <div class="bg-light col-6 text-center">
                <a asp-action="AllSChart" asp-controller="Home" asp-area="Visitor"><img src="~/Images/StileShape.png" class="img-fluid" /></a>
            </div>
        </div>

        <br />
        <br />
       
        <div style="background-color: #ffffff">
            @foreach (var item in Model.Category)
            {
                @if (item.Name == "Strategies")
                {

                    <a asp-action="Index" asp-controller="Home" asp-route-filterString="@item.Name" class="font-weight-bolder text-muted col-12" style="background-color: #FFFFFF">@item.Name</a>
                    <div style="color: #363636; border-radius: 10px; border: 3px solid #e2e2e2; background-color: #ffffff; padding: 5px; margin-top: 5px; margin-bottom: 5px">
                        @{

                            foreach (var description in Model.Description.Where(u => u.Name.Equals(item.Name)))
                            {
                                @Html.Raw(description.TextArea1)
                            }
                        }
                    </div>

                }
                @if (item.Name == "Paper Trading")
                {

                    <a asp-action="Index" asp-controller="Home" asp-route-filterString="@item.Name" class="font-weight-bolder text-muted col-12" style="background-color: #FFFFFF">@item.Name</a>
                    <div style="color: #363636; border-radius: 10px; border: 3px solid #e2e2e2; background-color: #ffffff; padding: 5px; margin-top: 5px; margin-bottom: 5px">
                        @{

                            foreach (var description in Model.Description.Where(u => u.Name.Equals(item.Name)))
                            {
                                @Html.Raw(description.TextArea1)
                            }
                        }
                    </div>
                }

                @if (item.Name == "Portfolio")
                {
                    <a asp-action="Index" asp-controller="Home" asp-route-filterString="@item.Name" class="font-weight-bolder text-muted col-12" style="background-color: #FFFFFF">@item.Name</a>
                    <div style="color: #363636; border-radius: 10px; border: 3px solid #e2e2e2; background-color: #ffffff; padding: 5px; margin-top: 5px; margin-bottom: 5px">
                        @{

                            foreach (var description in Model.Description.Where(u => u.Name.Equals(item.Name)))
                            {
                                @Html.Raw(description.TextArea1)
                            }
                        }
                        <a asp-action="AllSChart" asp-controller="Home" asp-area="Visitor" class="bnt btn-light btn-block btn text-center text-white" style="background-color: #FC6471">Got To Charts</a>
                        <div style="height: 5px"></div>
                    </div>
                }

                @if (item.Name == "About")
                {
                    <a asp-action="Index" asp-controller="Home" asp-route-filterString="@item.Name" class="font-weight-bolder text-muted col-12" style="background-color: #FFFFFF">@item.Name</a>
                    <div style="color: #363636; border-radius: 10px; border: 3px solid #e2e2e2; background-color: #ffffff; padding: 5px; margin-top: 5px; margin-bottom: 5px">
                        <img src="~/Images/ZJ.jpg.png" width="100" />
                        @{

                            foreach (var description in Model.Description.Where(u => u.Name.Equals(item.Name)))
                            {
                                @Html.Raw(description.TextArea1)
                            }
                        }
                    </div>
                }

            }
        </div>


    </div>


}


