<script>
    $(document).ready(function () {

        if (screen.width >= 1200) {
            $("#dots").hide();
        }
        else {

            $("#dots").show();
        }

    });
</script>

<script>
    $(document).ready(function () {

        if (screen.width >= 1200) {
            $("#menuextend").addClass("col-12");
        }

        else {
            $("#itopmargin").addClass("indexmargin")
        }

    });
</script>

