<div class="container" style="z-index: 100; position: fixed; top: 50px; left: 50%; transform: translateX(-50%)">
    <div class="row align-items-center">
        <div id="menuextend" class="scrollmenu text-center col-10" style="border-radius: 10px; background-color: #ffffff">

            @foreach (var item in Model.Category)
            {
                @if (item.Name == "About")
                {
                    <a asp-action="Index" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; px; color: #363636;background-color: #FFFFFF">@item.Name</a>
                }
                @if (item.Name == "Strategies")
                {
                    <a asp-action="Index" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; px; color: #363636;background-color: #FFFFFF">@item.Name</a>
                }

                @if (item.Name == "Portfolio")
                {
                    <a asp-action="Index" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; px; color: #363636;background-color: #FFFFFF">@item.Name</a>
                }

                @if (item.Name == "Charts")
                {
                    <a asp-action="AllSChart" asp-controller="Home" asp-area="Visitor" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; color: #363636; background-color: #FFFFFF">
                        @item.Name
                    </a>
                }

                @if (item.Name == "Paper Trading")
                {
                    <a asp-action="Index" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; px; color: #363636;background-color: #FFFFFF">@item.Name</a>
                }

                @if (item.Name == "Contacts")
                {
                    <a asp-action="Index" asp-route-filterString="@item.Name" class="btn shadow m-1 active font-weight-bolder" style="min-width: 120px; px; color: #363636;background-color: #FFFFFF">@item.Name</a>
                }
            }

        </div>

        <div id="dots" class="text-center text-muted align-items-center col-1" style="background-color: white; font-size: 26px">
            <i class="far fa-hand-point-left"></i>
        </div>


    </div>
</div>




@if (Model.CategoryFilter.Count() == 1)
{
    @foreach (var item in Model.CategoryFilter)
    {

        <!--<h4 class="font-weight-bolder" style="color:#266DD3">
