<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Date', '@Enum.GetName(typeof(SysExp.Models.ViewModels.ToChartViewModel.EPortfolios), @Model.Portfolios)'],

            @{


                foreach (var data in Model.ChartDataList) {

                 <text>['@data.DateToString', @data.Equity],</text>
                }

            }
        ]);


        var options = {



            backgroundColor: '#FFFFFF',
            series: {
                0: {
                    color: '#266DD3',

                },
                            },
            title: '@chartTitle',

            legend: {position: 'right', textStyle: {fontSize: 8}},

            pointsVisible: false,
            lineWidth: 2,
            hAxis: { title: 'Date', format: 'yyyy-MM-dd', width: 20, textStyle: {fontSize: 10}},
            vAxis: { title: '@chartUnit', width: 150, height: 10, fontSize: 1 , textStyle: {fontSize: 10} },
            width: '100%',
            height: '100%',
            chartArea: {width: '45%', height: '50%', backgroundColor: '#FFFFFF'}
        };

        var chart = new google.visualization.LineChart(document.getElementById('line_chart'));
        chart.draw(data, options);
    }
</script>

